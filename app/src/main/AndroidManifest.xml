<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.humin.crf_app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".CrfApp"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme">

        <meta-data android:name="DATABASE" android:value="tme.db" />
        <meta-data android:name="VERSION" android:value="1" />
        <meta-data android:name="QUERY_LOG" android:value="true" />
        <meta-data android:name="DOMAIN_PACKAGE_NAME" android:value="com.example.humin.crf_app.database" />

        <activity android:name=".core.main.acitivty.MainMenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".core.wallpaper.activity.Wallpaper2RowActivity"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".core.wallpaper.activity.Wallpaper3RowActivity"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".core.question.acitivty.QuestionActivity"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".core.login.activity.LoginActivity"
            android:theme="@style/AppTheme" />

    </application>

</manifest>